<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">

  <Id>8b47eddf-c2f8-4841-8ff0-80e677f04015</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>ExplainMyEmail</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="ExplainMyEmail" />
  <Description DefaultValue="Helps users analyze email red flags." />
  <IconUrl DefaultValue="https://dperez40.github.io/explain-my-email/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://dperez40.github.io/explain-my-email/assets/icon-80.png" />
  <SupportUrl DefaultValue="https://dperez40.github.io/explain-my-email/" />

  <DefaultSettings>
    <SourceLocation DefaultValue="https://dperez40.github.io/explain-my-email/taskpane.html"/>
  </DefaultSettings>

  <AppDomains>
    <AppDomain>https://dperez40.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://dperez40.github.io/explain-my-email/taskpane.html" />
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
                    xsi:type="VersionOverridesV1_0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>

    <Description resid="residAppDescription" />

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://dperez40.github.io/explain-my-email/assets/icon-16.png" />
        <bt:Image id="icon32" DefaultValue="https://dperez40.github.io/explain-my-email/assets/icon-32.png" />
        <bt:Image id="icon80" DefaultValue="https://dperez40.github.io/explain-my-email/assets/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="taskpaneUrl" DefaultValue="https://dperez40.github.io/explain-my-email/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="residAppName" DefaultValue="ExplainMyEmail" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="residAppDescription" DefaultValue="Helps users analyze email red flags." />
      </bt:LongStrings>
    </Resources>

    <ExtensionPoint xsi:type="MessageReadCommandSurface">
      <OfficeTab id="TabDefault">
        <Group id="msgReadGroup">
          <Label resid="residAppName"/>
          <Control xsi:type="Button" id="msgReadOpenPaneButton">
            <Label resid="residAppName"/>
            <Supertip>
              <Title resid="residAppName"/>
              <Description resid="residAppDescription"/>
            </Supertip>
            <Icon>
              <bt:Image size="16" resid="icon16" />
              <bt:Image size="32" resid="icon32" />
              <bt:Image size="80" resid="icon80" />
            </Icon>
            <Action xsi:type="ShowTaskpane">
              <SourceLocation resid="taskpaneUrl" />
            </Action>
          </Control>
        </Group>
      </OfficeTab>
    </ExtensionPoint>

  </VersionOverrides>
</OfficeApp>
